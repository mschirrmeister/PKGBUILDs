# Maintainer: Marco Schirrmeister <mschirrmeister@gmail.com>
# https://github.com/mschirrmeister/PKGBUILDs/blob/main/core/linux-aarch64-msc-lts/PKGBUILD

_desc="almost mainline but with MSC's patches, for Rockchip and Amlogic"

pkgbase=linux-aarch64-msc-lts
pkgname=(
  "${pkgbase}"
  "${pkgbase}-headers"
)
pkgver=6.18.13
pkgrel=2
arch=('aarch64')
url="https://kernel.org"
license=('GPL2')
makedepends=( # Since we don't build the doc, most of the makedeps for other linux packages are not needed here
  'kmod' 'bc' 'dtc' 'uboot-tools' 'pahole'
)
options=(!strip)
_srcname="linux-${pkgver}"
_kernelname=${pkgbase#linux}
source=(
   "https://cdn.kernel.org/pub/linux/kernel/v${pkgver%%.*}.x/${_srcname}.tar.xz"
  'config'
  'rk3399-orangepi-4-lts.dts'
  '0001-general-fix-mmc-signal-voltage-before-reboot.patch'
  '0002-driver-power-meson64-reset.patch'
  '0003-board-odroid-sm1-reset.patch'
  '1000-arm64-dts-rockchip-Makefile.patch'
  'rk3399-enable-dwc3-xhci-usb-trb-quirk.patch'
  'rk3399-sd-drive-level-8ma.patch'
  'rk3399-sd-pwr-pinctrl.patch'
  'rk3399-unlock-temperature.patch'
  'rk3399-add-sclk-i2sout-src-clock.patch'
  '2000-Add-FriendlyElec-NanoPi-R76S.patch'
  '2001-soc-rockchip-grf-Fix-wrong-RK3576_IOCGRF_MISC_CON-definition.patch'
  '2002-soc-rockchip-grf-Support-multiple-grf-to-be-handled.patch'
  '2003-mmc-dw_mmc-rockchip-Fix-runtime-PM-support-for-internal-phase-support.patch'
  '2004-arm64-dts-rockchip-Fix-SD-card-support-for-RK3576-EVB1.patch'
  '2005-arm64-dts-rockchip-Fix-SD-card-support-for-RK3576-Nanopi-R76s.patch'
  '2006-mmc-dw_mmc-rockchip-Add-memory-clock-auto-gating-support.patch'
  '9000-v2-Fix-invariant-violation-for-single-value-tnums.patch'
)
